{{#each posts as |post| }}
<div class="card">
  <div class="title-row">
    <h2> {{ post.title }} </h2>
    <p> Posted by {{ user.name }} on {{ date }} </p>
  </div>
  <div class="content">
    <p> {{ post.content }} </p>
  </div>
</div>
{{/each}}





