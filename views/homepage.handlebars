

<div class="title-box">
  <div class="container">
    <div class="box">The Tech Blog</div>
  </div>
</div>

<div class="all-posts">
  <div class="container">
  {{#if posts.length}}

  {{#each posts as |post| }}
  <div class="card" id="{{post.id}}">
    <div class="title">
      <h2> {{post.title}} </h2>
      <p> Posted by {{ blog_user.username }}</p>
      {{!-- on {{ date }} --}}
    </div>
    <div class="content">
      <p> {{post.content}} </p>
    </div>
    <div class="comment-box" value="{{post.id}}">
      <label for="comment-text">Comment</label>
      <input type="text" class="" id="comment-text">
    </div>
  </div>
  {{/each}}

  {{/if}}
  </div>
</div>

<script src="./js/homepage.js"></script>






