

<div class="title-box">
  <div class="container">
    <div class="box">The Tech Blog</div>
  </div>
</div>

<div class="all-posts">
  <div class="container">
  {{#if posts.length}}

  {{#each posts as |post| }}
  <div class="card">
    <div class="title">
      <h2> {{post.title}} </h2>
      <p> Posted by {{ blog_user.name }} on {{ date }} </p>
    </div>
    <div class="content">
      <p> {{post.content}} </p>
    </div>
  </div>
  {{/each}}

  {{/if}}
  </div>
</div>






