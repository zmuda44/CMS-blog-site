{{#if logged_in}}
<div class="title-box" id="user-id" user-id="{{user.id}}">
  <div class="container">
    <div class="box">Your Dashboard</div>
  </div>
</div> 

{{else}}

<div class="title-box">
  <div class="container">
    <div class="box">The Tech Blog</div>
  </div>
</div>  

{{/if}}


{{!-- Posts --}}

<div class="new-post-section">
  <div class="container">
    {{!-- Space holder to take up space that form will occupy. Do not want to use opacity 0 on form to ensure no functionality --}}
    <div class="space-holder"></div>

    {{#each userPosts as |userPost|}}
    <div class="user-posts" id="{{userPost.id}}">      
      <p class="user-post-title" style="border: solid">{{userPost.title}}</p>
      {{!-- <p class="user-post-content" style="background-color: red">{{userPost.content}}</p> --}}
      <div class="update-post-form" id="update-post-form">
        <label for="post-text-{{userPost.id}}">Title</label>
        <input type="text" value="{{userPost.title}}" class="update-post-title" id="update-post-title{{post.id}}">
        <label for="post-text-{{userPost.id}}">Content</label>
        <input type="text" value="{{userPost.content}}" class="update-post-content" id="update-post-content{{post.id}}">
        <button class="update-post-btn" post-id="{{userPost.id}}">Update</button>
        <button class="delete-post-btn" post-id="{{userPost.id}}">Delete</button>
      </div>
    </div>
    {{/each}}
    
    {{!-- Hidden until button click --}}
    <form class="post-form" id="{{user.id}}">
      <h2>Create new post</h2>
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-input" type="text" name="title" id="title" />
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        <input class="form-input" type="input" name="content" id="content" />
      </div>
      <div class="form-group">
        <button class="" type="submit">Create</button>
      </div>
    </form>
    <button class="new-post-btn">New Post</button>
  </div>
</div>






<script src="./js/dashboard.js"></script>







