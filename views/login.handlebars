<div class="login-section">    
    <h2>Login</h2>

    <form class="login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" name="email-login" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password">password:</label>
        <input class="form-input" type="password" name="password-login" id="password-login" />
      </div>
      <div class="form-group">
        <button class="" type="submit">login</button>
      </div>
    </form>
  </div>
  
  
  <div class="signup-section">
    <h2>Signup</h2>

    <form class="signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
